<div class="container">
  <div class="jumbotron">
    <h1>Longest word game</h1>
    <p>You will have to find the longest word with the given letters !</p>
  </div>
  <div class="well">
    <h4>Here are your letters :</h4>

    <ul class="list-inline">
      <% @grid.each do |letter| %>
      <li><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <div class="well">
    <h4>What's your best shot ?</h4>
    <form action="/score" method="get" class="form-inline">
      <div class="form-group">
        <input type="text" class="form-control" name="query" id="response" placeholder="Something">
        <input type="hidden" name="start_time" value="<%= Time.now.to_i %>">
        <input type="hidden" name="grid" value="<%= @grid.join() %>">
      </div>
      <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> Send</button>
    </form>
  </div>
</div>
